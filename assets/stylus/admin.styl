mobile = "(max-width: 800px)"
verde = #96c784


*
	font-family Cabin

.admin
	md-toolbar
		.md-toolbar-tools
			p
				@media mobile
					max-width 50%
					font-size 16px
md-grid-list
	md-grid-tile
		background-repeat no-repeat
		background-size cover
		background-position center

.croppie-container
	max-height 200px
	.cr-boundary
		width 300px
		height 235px !important
.imagen-container
	width 95%
	height 24%
	.dropify-container
		width 96%

.md-virtual-repeat-container
	height 126px

.dropify-wrapper
	&.touch-fallback
		.dropify-clear
			bottom 8px !important

.home
	@media mobile
		display flex
		flex-direction column
		justify-content center
		align-items center

	.home-content
		display flex
		justify-content center
		align-items center
		@media mobile
			flex-direction column
			justify-content center
			align-items center
			width 100%
		h1
			@media mobile
				font-size 40px
				font-weight 400
				margin 0
		p
			@media mobile
				font-size 22px

.servicio
	display flex
	flex-direction row
	@media mobile
		flex-direction column
	.servicio-content
		width 50%
		@media mobile
			max-width inherit !important
			width 96%
		.md-toolbar-tools
			h4
				font-size 25px
				margin 0
				font-weight 100
				@media mobile
					font-size 22px
	.DespuesEdicion
		.servicio-form
			display flex
			justify-content center
			align-items center
			.info
				width 100%
			.descripcion-container
				@media mobile
					margin-bottom 30px
				min-height 50%
				text-angular
					.ta-toolbar
						@media mobile
							display none !important
						display flex
						flex-direction row
						flex-wrap wrap
						.ta-button-group
							button
								md-icon
									color #64B5F6
				.titulo
					md-icon
						margin-left 0
						margin 13px
		.servicio.info
			@media mobile
				margin-top 30px
			min-width inherit
			min-height inherit
			width 200px
			height 49px
			background-color verde


	.AntesEdicion
		h1
			margin 0
			font-size 20px
			@media mobile
				font-size 15px
		h3
			font-size 16px
			@media mobile
				font-size 15px

		.infoBasica-content
			p
				font-size 16px
				text-align justify
				@media mobile
					font-size 14px

	.subservicios-container
		width 50%
		@media mobile
			max-width inherit !important
			width 96%
		.md-toolbar-tools
			h4
				margin 0
				font-size 25px
				font-weight 100
				@media mobile
					font-size 20px
		.subservicios-content
			.md-button
				background-color verde
				min-width inherit
				min-height inherit
				width 65px
				height 34px
				margin-top 17px
				@media mobile
					width 60px
					height 31px
					margin-top 21px
		.md-virtual-repeat-container
			.repeated-item
				.texto
					width 100%
					display flex
					justify-content flex-start
					align-items center
					@media mobile
						width 55%
					strong
						@media mobile
							font-size 20px
				.botones-container
					display flex
					flex-direction row
					.md-button.md-fab
						min-width inherit
						min-height inherit
						width 50px
						height 50px
						@media mobile
							min-width inherit
							min-height inherit
							width 40px
							height 40px
.imagenes-servicio
	.md-toolbar-tools
		h4
			margin 0
			font-size 25px
			font-weight 100
			@media mobile
				font-size 20px
	.contenedor
		@media mobile
