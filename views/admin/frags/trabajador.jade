.trabajador
	md-card.trabajador-content(flex)
		md-toolbar
			.md-toolbar-tools
				h4 Informaci칩n B치sica
				span(flex)
				md-button(ng-click="ctrl.trabajador.habilitarEdicion()")
					md-icon(ng-show="!ctrl.infomuestra") edit
					md-icon(ng-show="ctrl.infomuestra") clear
		md-card-content
			.AntesEdicion(ng-show= "!ctrl.infomuestra")
