.background-trabajadores
.trabajadores-container
	.trabajadores-content
		h1 Nuestro Equipo
		.slider-content
			.slider(layout="row" flex)
				.trabajador(ng-repeat='trabajador in ctrl.trabajadores.items')
					.contenedor
						.parte-izq
							
							.descripcion(ng-bind-html="trabajador.descripcion")
						.parte-der
							.titulo
								h3 {{trabajador.nombre}}
								p {{trabajador.puesto}}
							.imagen
								img(src="{{trabajador.imagen[0].imagen}}")
